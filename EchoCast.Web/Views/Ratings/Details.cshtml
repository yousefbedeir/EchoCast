@model Rating

@{
    ViewData["Title"] = "Rating Details";
}

<h1>Rating Details</h1>

<div>
    <h4>Rating</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Stars
        </dt>
        <dd class="col-sm-10">
            @Model.Stars
        </dd>
        <dt class="col-sm-2">
            Podcast
        </dt>
        <dd class="col-sm-10">
            @Model.Podcast?.Name
        </dd>
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Model.User?.Name
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

