@model Rating

@{
    ViewData["Title"] = "Delete Rating";
}

<h1>Delete Rating</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Rating</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Stars
        </dt>
        <dd class="col-sm-10">
            @Model.Stars
        </dd>
        <dt class="col-sm-2">
            Podcast
        </dt>
        <dd class="col-sm-10">
            @Model.Podcast?.Name
        </dd>
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Model.User?.Name
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

