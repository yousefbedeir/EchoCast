@model Podcast

@{
    ViewData["Title"] = "Podcast Details";
}

<h1>Podcast Details</h1>

<div>
    <h4>Podcast</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            About
        </dt>
        <dd class="col-sm-10">
            @Model.About
        </dd>
        <dt class="col-sm-2">
            Creator
        </dt>
        <dd class="col-sm-10">
            @Model.Creator?.Name
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

